body {
  font-family: HalisR-Regular, sans-serif;
  font-weight: 200;
  color: #444;
  padding: 0;
  margin: 0;
  position: relative;
  font-size: 16px;
  background: #f5f5f5;
  padding: 4px;
}


.header-container {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  height: 48px;
  min-width: 200px;
  word-wrap: nowrap;
  align-items: center;
  white-space: nowrap;
  font-size: x-large;
}

.header-container__title {
  margin: 0 1em;
}

.counter-value {
  display: inline-block;
  width: 20px;
  text-align: center;
  font-size: 0.8em;
}

#like-counter { color: #1ECA6B; }
#snooze-counter { color: #F84339; }
#none-counter { color: grey; }

.logo-img {
  height: 100%;
  width: auto;
}

#videos-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 10px;
  max-width: <%= @max_plugin_window_width %>px;
  background-color: lightgrey;
  overflow: scroll;
}

#videos-container > .thumbnail {
  height: 90px;
  width: 160px;
  margin: 10px;
}

.thumbnail.liked {
  box-shadow: 0px 0px 8px 2px #1ECA6B;
}

.thumbnail.snoozed {
  box-shadow: 0px 0px 8px 2px #F84339;
}

.thumbnail.no-sentiment {
  box-shadow: 0px 0px 8px 2px grey;
}
