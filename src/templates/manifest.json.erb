{
  "manifest_version": 2,

  "name": "<%= @PRODUCT_TITLE %>",
  "description": "<%= @PRODUCT_DESCRIPTION %>",
  "version": "<%= @VERSION %>",

  "browser_action": {
  "default_icon": {
    "19": "icon.png",
    "38": "icon_38x38.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "contextMenus",
    "tabs",
    "http://*/",
    "https://*/",
    "management"
  ],
  "icons": {
      "16": "icon.png",
      "19": "icon.png",
      "38": "icon_38x38.png",
      "48": "icon_48x48.png",
      "128": "icon_128x128.png"
  },

  "background": {
    "scripts": []
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"],
      "css": ["pa-style.css"],
      "all_frames" : true,
      "run_at" : "document_end",
      "match_about_blank" : true
    }
  ],

  "web_accessible_resources": [
    "*.png",
    "webfonts/proximanova/*"
  ]
}
