

/* POPOUT */
.pa-popout {
  position: absolute;
  top: 30%;
  padding-right: 50px;
  min-height: 40px;
  width: 100px;
  padding: 10px 50px 10px 10px;
  left: -110px;
  background-color: rgba(0, 0, 0, 0.4);
  transition: left 100ms linear;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: all;
}
.pa-popout:hover, .pa-popout.open {
  left: 0;
}

.pa-popout__logo {
  position: absolute;
  right: 5px;
  height: 40px;
  width: 40px;
}

.pa-popout__button {
  display: inline-block;
  flex-grow: 1;
  text-align: center;
  height: 30px;
  line-height: 30px;
  color: white;
  border-radius: 5px;
  text-decoration: none;
  margin: 3px;
}

.button-accept { background-color: #1ECA6B; }
.button-reject { background-color: #F84339; }
.button-accept:hover {
  text-decoration: none;
  background-color: #009338;
}
.button-reject:hover {
  text-decoration: none;
  background-color: #DF2A20;
}


/* CALLOUT */
.pa-callout {
  position: absolute;
  bottom: 15%;
  left: 50%;
  transform: translateX(-50%);
  cursor: pointer;
  overflow: hidden;
  display: flex;
  align-items: center;
  height: 40px;
  border-radius: 20px;
  background-color: rgba(0, 0, 0, 0.4);
}

.pa-callout > * {
  padding: 5px;
}

.pa-callout:last-child {
  padding-right: 15px;
}

.pa-callout__logo {
  height: 80%;
}

.fader {
  transition: opacity <%= @fade_out_delay_ms %>ms linear;
}

.fader.fadeOut {
  opacity: 0;
}
