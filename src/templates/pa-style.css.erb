

/* POPOUT */
.pa-popout {
  position: absolute;
  top: 30%;
  padding-right: 50px;
  min-height: 40px;
  width: 100px;
  padding: 10px 50px 10px 10px;
  left: -110px;
  background-color: rgba(0, 0, 0, 0.4);
  transition: left 100ms linear;
}
.pa-popout:hover {
  left: 0;
}

.pa-popout__logo {
  position: absolute;
  right: 5px;
  height: 40px;
  width: 40px;
}

.pa-popout__button {
  display: inline-block;
  margin-top: 5px;
}

.pa-popout__button > * {
  width: inherit;
  height: inherit;
}



/* CALLOUT */
.pa-callout {
  position: absolute;
  top: 10px;
  left: 10px;
  pointer-events: none;
  overflow: hidden;
  display: flex;
  align-items: center;
  height: 40px;
  border-radius: 20px;
  background-color: rgba(0, 0, 0, 0.4);
}

.pa-callout > * {
  padding: 5px;
}

.pa-callout__logo {
  height: 80%;
}
