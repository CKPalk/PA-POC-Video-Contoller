@import '../../global.styl'

.signinLayout
  position: relative
  > div
    overflow: hidden
    position: absolute
    left: 0
    right: 0
    background-color: #f4f7f8
  form
    // Required to override default form
    position: initial
    transform: none
    margin 0 auto
    // end required
    input[type='button'].skip
      display: inline-block
      width: 20%
      margin: 0
      padding: 2px 6px 3px
      transform: none
      line-height: 1em
      font-size: 0.8em
      float: right
