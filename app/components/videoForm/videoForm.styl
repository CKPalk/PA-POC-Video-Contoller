
.videoForm
  pointer-events: all
  position: absolute
  bottom: 15%
  left: 10px
  overflow: hidden
  height: 40px
  border-radius: 20px
  background-color: #333E48
  border: 1px solid darker(@background-color, .8)
  box-shadow: 0 1px 6px rgba(0,0,0,0.3)
  display: flex
  align-items: center
  transition: width 0.4s ease-out
  width 40px
  &:hover
  &--open
    width 240px
  &--closed
    width 40px
  &__logo
    margin-right: 0
    min-width: 40px
    height: 50%
    background-position: center
    background-size: contain
    background-repeat: no-repeat
  &__content
    padding-right: 5px
    display: flex
    align-items: center
    width: 200px
    height: 40px
    > *
      margin: 3px
    > :first-child
      margin-left: 3px
    > :last-child
      margin-right: 3px
